<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="16dp"
        android:text="Settings"
        android:theme="@style/TitleText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/settings_border1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dark_purple"
        app:layout_constraintTop_toTopOf="@+id/settings_share_this_app"/>

    <TextView
        android:id="@+id/settings_share_this_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:padding="20dp"
        android:text="Share this app"
        android:textColor="@color/dark_purple"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_title" />

    <View
        android:id="@+id/settings_border2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dark_purple"
        app:layout_constraintBottom_toBottomOf="@+id/settings_share_this_app"/>

    <TextView
        android:id="@+id/settings_rate_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:padding="20dp"
        android:text="Rate us"
        android:textColor="@color/dark_purple"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_border2" />

    <View
        android:id="@+id/settings_border3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dark_purple"
        app:layout_constraintBottom_toBottomOf="@+id/settings_rate_us"/>

    <TextView
        android:id="@+id/settings_leave_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/settings_border3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="20dp"
        android:text="Leave feedback"
        android:background="?selectableItemBackground"
        android:textColor="@color/dark_purple"
        android:clickable="true"/>

    <View
        android:id="@+id/settings_border4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dark_purple"
        app:layout_constraintBottom_toBottomOf="@+id/settings_leave_feedback"/>

    <TextView
        android:id="@+id/settings_cleare_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/settings_border4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="20dp"
        android:text="Cleare History"
        android:background="?selectableItemBackground"
        android:textColor="@color/dark_purple"
        android:clickable="true"/>

    <View
        android:id="@+id/settings_border5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dark_purple"
        app:layout_constraintBottom_toBottomOf="@+id/settings_cleare_history"/>

    <TextView
        android:id="@+id/settings_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="600dp"
        android:text="v 1.0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/settings_image_next1"
        android:layout_width="18dp"
        android:layout_height="21dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:elevation="1dp"
        android:padding="1dp"
        android:src="@drawable/ic_next"
        app:layout_constraintEnd_toEndOf="@+id/settings_share_this_app"
        app:layout_constraintTop_toTopOf="@+id/settings_border1" />

    <ImageView
        android:id="@+id/settings_image_next2"
        android:layout_width="18dp"
        android:layout_height="21dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:elevation="1dp"
        android:padding="1dp"
        android:src="@drawable/ic_next"
        app:layout_constraintEnd_toEndOf="@+id/settings_share_this_app"
        app:layout_constraintTop_toTopOf="@+id/settings_border2" />

    <ImageView
        android:id="@+id/settings_image_next3"
        android:layout_width="18dp"
        android:layout_height="21dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:elevation="1dp"
        android:padding="1dp"
        android:src="@drawable/ic_next"
        app:layout_constraintEnd_toEndOf="@+id/settings_share_this_app"
        app:layout_constraintTop_toTopOf="@+id/settings_border3" />

    <ImageView
        android:id="@+id/settings_image_next4"
        android:layout_width="18dp"
        android:layout_height="21dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:elevation="1dp"
        android:padding="1dp"
        android:src="@drawable/ic_next"
        app:layout_constraintEnd_toEndOf="@+id/settings_share_this_app"
        app:layout_constraintTop_toTopOf="@+id/settings_border4" />


</androidx.constraintlayout.widget.ConstraintLayout>