<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_answer1"
        android:layout_width="273dp"
        android:layout_height="22dp"
        android:layout_gravity="center"
        android:layout_marginStart="60dp"
        android:layout_marginTop="200dp"
        card_view:cardCornerRadius="4dp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_answer1"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:gravity="center_vertical|center_horizontal|top"
            android:text="Answer1"
            android:textSize="12sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_answer2"
        android:layout_width="274dp"
        android:layout_height="22dp"
        android:layout_gravity="center"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_answer1">

        <TextView
            android:id="@+id/text_answer2"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:gravity="center_vertical|center_horizontal|top"
            android:text="Answer2"
            android:textSize="12sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_answer3"
        android:layout_width="275dp"
        android:layout_height="22dp"
        android:layout_gravity="center"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_answer2">

        <TextView
            android:id="@+id/text_answer3"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:gravity="center_vertical|center_horizontal|top"
            android:text="Answer3"
            android:textSize="12sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_answer4"
        android:layout_width="277dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_answer3">

        <TextView
            android:id="@+id/text_answer4"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:gravity="center_vertical|center_horizontal|top"
            android:text="Answer4"
            android:textSize="12sp" />

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="36dp"
        android:text="Ok"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_answer4" />

    <Button
        android:id="@+id/button_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="16dp"
        android:text="Skip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_ok" />

    <TextView
        android:id="@+id/text_question"
        android:layout_width="372dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Question"
        app:layout_constraintBottom_toTopOf="@+id/card_view_answer1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.462" />

</android.support.constraint.ConstraintLayout>