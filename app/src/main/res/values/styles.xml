<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/dark_purple</item>
        <item name="colorAccent">@color/purple</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Answer_Option">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/answer_text</item>
    </style>

    <style name="TitleText" parent="AppTheme.BoldText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="RegularBoldText" parent="AppTheme.BoldText">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="RegularText" parent="AppTheme.LightText">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme.LaunchScreen">
        <!--TODO-->
    </style>

    <style name="AppTheme.BoldText">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="AppTheme.RegularText">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.SemiboldText">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.LightText">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>
